  <groupId>com.htht</groupId>
  <artifactId>monitor-server</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>war</packaging>

  <name>monitor-server Maven Webapp</name>
  <!-- FIXME change it to the project's website -->
